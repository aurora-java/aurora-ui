  <example>
    <title>代码示例</title>

    <programlisting role="xml">&lt;checkBox name="test1" label="TEST1" bindTarget="TEST_DS"/&gt;</programlisting>
  </example>

  <table class="pro_table">
    <caption>属性说明</caption>

    <thead>
      <tr>
