  <info>
    <title>Radio - 单选框</title>

    <author>
      <personname>牛佳庆</personname>

      <email>njq.niu@hand-china.com</email>
    </author>
  </info>

  <para>单选框控件</para>

  <example>
    <title>代码示例</title>

    <programlisting role="xml">&lt;radio prompt="级别" name="class" bindTarget="TEST_DS" width="300"&gt;
    &lt;items&gt;
        &lt;item label="C1" value="C1"/&gt;
        &lt;item label="C2" value="C2"/&gt;
        &lt;item label="C3" value="C3"/&gt;
        &lt;item label="S1" value="S1"/&gt;
        &lt;item label="S2" value="S2"/&gt;
        &lt;item label="S3" value="S3"/&gt;
    &lt;/items&gt;
&lt;/radio&gt;</programlisting>
  </example>

  <table class="pro_table">
    <caption>属性说明</caption>

    <thead>
      <tr>
        <td>属性名</td>

        <td>说明</td>
      </tr>
    </thead>

    <tbody>
      <tr>
        <td>id</td>

        <td>组件id</td>
      </tr>

      <tr>
        <td>bindtarget</td>

        <td>绑定的dataset的id</td>
      </tr>

      <tr>
        <td>name</td>

        <td>绑定到dataset的field的name</td>
      </tr>

      <tr>
        <td>width</td>

        <td>宽度</td>
      </tr>

      <tr>
        <td>prompt</td>

        <td>输入框的标签</td>
      </tr>
    </tbody>
  </table>
