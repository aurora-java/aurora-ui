	]]></update>
	<data-filters>
		<data-filter expression="empno = ${@empno}"/>
	</data-filters>
	<query-fields>
		<query-field name="creation_date" queryOperator="&gt;=" dataType="java.sql.Date"/>
	</query-fields>
	-->
</sql-service>
